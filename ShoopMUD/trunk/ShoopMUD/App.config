<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="ObjectStorageFactory" type="Shoop.IO.Serialization.ObjectStorageConfiguration, ShoopMUD"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>    
  </configSections>
  <appSettings>
    <add key="player.dir" value="players/"/>
    <add key="default.room" value="Areas/DefaultArea/Rooms/DefaultRoom"/>
  </appSettings>
    <log4net>
      <appender name="OutputDebugStringAppender" type="log4net.Appender.OutputDebugStringAppender" >
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
        </layout>
      </appender>
    </log4net>
  <!--
  <system.diagnostics>
    <trace autoflush="true" indentsize="5">
      <listeners>
        <add name="log" type="System.Diagnostics.TextWriterTraceListener"
             initializeData="output.txt"  traceOutputOptions="DateTime" />
        <remove name="Default" />
      </listeners>
    </trace>
  </system.diagnostics>
  -->
  <ObjectStorageFactory>
    <PersistenceManagers>
      <add name="player" 
           base-path="players/" 
           file-extension=".jsx" 
           type="Shoop.IO.Serialization.JsonExPersistenceAdapter" 
           persisted-type="Shoop.Data.Player"/>
      <add name="area" 
           base-path="areas/" 
           file-extension=".jsx" 
           type="Shoop.IO.Serialization.JsonExPersistenceAdapter" 
           persisted-type="Shoop.Data.Area"/>
      <!--
      <add name="json" extension=".js" type="Shoop.IO.Serialization.JSONSerializerAdapter" />
      <add name="xml" extension=".xml" type="Shoop.IO.Serialization.XmlSerializerAdapter" />
      -->
    </PersistenceManagers>
  </ObjectStorageFactory>
</configuration>